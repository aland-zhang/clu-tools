set -e

NODE1=localhost
NODE2=dolphin1.client.zytolabor.ch

# Commandline Parsing
# ===================
ACTION=${1:list}

LVM_LV=${2:-test}
LVM_VG=${LVM_VG:-orca}
LVM_FS=${LVM_FS:-ext3}
LVM_SIZE=${LVM_SIZE:-4G}

# Create disk
function create() {
	lvcreate --size $LVM_SIZE --name $LVM_LV $LVM_VG
	mkfs.$LVM_FS /dev/$LVM_VG/$LVM_LV
}

function destroy() {
	lvremove /dev/$LVM_VG/$LVM_LV
}

# Main
# ====
$ACTION
