set -e

# Commands
# ========
function usage() {
	echo "Usage: $(basename $0) add <hostname>"
	echo

	exit 0
}

function get_master() {
	master_line=$(egrep "^[[:space:]]*master=" /etc/clu-tools/cluster.conf)
	eval "$master_line; echo \$master"
}

function add() {
local node=$1

	ssh $node clu-init init $(get_master)
}

# Main
# ====
if [ $# == 0 ] ; then
	ACTION=usage
else
	ACTION=$1
	shift
fi

$ACTION $@
