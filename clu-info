set -e

# Main
# ====

echo "Host:"
echo
uname -a
echo
free
echo

echo "Network:"
ip -family inet address
echo
ip route
echo
if [ -n "$(which brctl)" ] ; then
	brctl show
	echo
else
	echo "No network bridge"
	echo
fi

echo "Disks:"
if [ -n "$(which vgdisplay)" ] ; then
	vgdisplay
	echo
	lvdisplay
	echo
else
	echo "No LVM"
	echo
fi

if [ -f /proc/drbd ] ; then
	cat /proc/drbd
	echo
else
	echo "No DRBD"
	echo
fi

echo "Xen:"
if [ -n "$(which xm)" ] ; then
	xm uptime
	echo

	xm list
else
	echo "No Xen"
	echo
fi
