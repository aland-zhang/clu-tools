set -e

# Main
# ====

echo "Host:"
echo
uname -a
echo
free
echo

echo "Network:"
ip -family inet address
echo
ip route
echo
brctl show
echo

echo "Disks:"
vgs
echo
lvs
echo 
cat /proc/drbd
echo

echo "Xen:"
xm uptime
echo

xm list
