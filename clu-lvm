set -e

# Commandline Parsing
# ===================
NODE1=$(hostname -f)
NODE2=$1

# Commands
# ========
function usage() {
	echo "Usage: $(basename $0) clone <LOGICAL_VOLUME> <SECONDARY> [<VOLUME_GROUP>]"
	echo "       $(basename $0) grow <LOGICAL_VOLUME> <SECONDARY> <VOLUME_GROUP>" <NEW_SIZE>
	echo

	exit 0
}
if [ $# -lt 2 ] ; then
	usage
fi


 
function clone() {
local lv=$1
local secondary=$2
local vg=$3

	local extents=$(lvdisplay $lv | grep 'Current LE' | awk '{print $3}')
	local lv_name=$(basename $lv)

	ssh $secondary "lvcreate --name $lv_name --extents $extents ${vg:-\$(hostname -s)}"
}

function grow() {
local lv=$1
local secondary=$2
local vg=$3
local size=$4

	local lv_name=$(basename $lv)

	( lvresize --test --size $size $lv >/dev/null 2>&1 )
	result=$?
	if [ $result == 3 ] ; then
		echo "[WARN] Logical volume already set to $size"
	elif [ $result != 0 ] ; then
		lvresize --test --size $size $lv
		exit $result
	else
		lvresize --size $size $lv
	fi
	
	resize2fs $lv

	ssh $secondary "lvresize --size $size /dev/${vg:-\$(hostname -s)}/$lv_name"
	ssh $secondary "resize2fs /dev/${vg:-\$(hostname -s)}/$lv_name"
}


# Main
# ====
ACTION=${1:lvdisplay}
shift

$ACTION $@
