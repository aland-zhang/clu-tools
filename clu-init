NODE1=localhost
NODE2=dolphin1.client.zytolabor.ch

export LVM_LV=${1:-test}
export LVM_VG=${LVM_VG:-orca}
export LVM_FS=${LVM_FS:-ext3}
export LVM_SIZE=${LVM_SIZE:-4G}


# Main
# ====

clu-disk create $1
ssh $NODE2 clu-disk create $1
