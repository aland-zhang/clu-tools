set -e

# Commands
# ========
function usage() {
	echo "Usage: $(basename $0) init [<master>]"
	echo

	exit 0
}

function master() {
local master=${1:-$(hostname -f)}

	echo "master=\"$master\"" >/etc/clu-tools/cluster.conf
}

function init() {
local master=${1:-$(hostname -f)}

	mkdir /etc/clu-tools
	master $master
}

# Main
# ====
if [ $# == 0 ] ; then
	ACTION=init
else
	ACTION=$1
	shift
fi

$ACTION $@

