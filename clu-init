set -e

# Commands
# ========
function usage() {
	echo "Usage: $(basename $0)"
	echo

	exit 0
}

function init() {
	mkdir /etc/clu-tools
	echo "primary=$(hostname -f)" >/etc/clu-tools/cluster.conf
}

# Main
# ====
ACTION=${1:init}

$ACTION $@

